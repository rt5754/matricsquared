<div class="container mt-4">
  <h1 align="center">
    My subjects
  </h1>
  <div class="row">
    <% current_user.subjects.each do |subject| %>
      <div class="col-lg p-3">
        <div class="center">
          <%= link_to image_tag(subject.avatar.url, class: "rounded-circle border border-secondary", :width => 120, :height => 120, :crop => :fill), show_subject_path(subject.code) %>
        </div>
        <div class="link">
          <h4 align="center" class="mt-2"><%= link_to subject.name, show_subject_path(subject.code), class: "text-white" %></h4>  
        </div>
          
      </div>  
    <% end %>
  </div>
  <%= "Jirre jissis" if @subject %>
</div>
