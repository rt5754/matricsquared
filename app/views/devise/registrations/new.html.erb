<div class="col-md-4 offset-md-4 user-form bg-black div-shadow py-3">
  <div class="col-sm-8 offset-sm-2 ">
    <h2 class="mt-4 white">Register</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'shared/errors', object: resource %>
      <div class="seperator-red mb-3" style="width: 100px"></div>
      <div class="form-group">
        <%= f.label "First Name*" %>
        <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "eg. Koosie" %>
      </div>
      <div class="form-group">
        <%= f.label "Username*" %>
        <%= f.text_field :username, autofocus: "off", class: "form-control", placeholder: "eg. koos123" %>
      </div>
      <div class="form-group">
        <%= f.label "Email*" %>
        <%= f.email_field :email, autofocus: "off", class: "form-control", placeholder: "eg. koosie@koos.com" %>
      </div>
      <% provinces = ["Eastern Cape", "Free State", "Gauteng", "Kwazulu-Natal", "Limpopo", "Mpumalanga", "North West", "Northern Cape", "Western Cape"] %>
      <div class="form-group">
        <%= f.label "Province*" %>
        <%= f.select(:province, provinces, {:include_blank => "-select-"}, 
        { :class => 'custom-select input-xl', :style => 'width: 100%', id: 'subject-input' }) %>
      </div>
      <div class="form-group">
        <%= f.label "School (optional)" %>
        <%= f.text_field :school, autocomplete: "off", class: "form-control", placeholder: "eg. Paul Roos Gymnasium" %>
      </div>
      <div class="form-group">
        <%= f.label "Password*" %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "Password Confirmation*" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
      <div class="form-group actions">
        <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
      </div>
      <small>* required field</small>
    <% end %>
    
    <h4 class="py-4">Already have an account? <%= link_to "Login", new_user_session_path %></h4>
    
  </div>
  
  
</div>
