<div class="col-lg-4 offset-lg-4 user-form bg-black div-shadow py-3">
  <div class="col-lg-8 offset-lg-2 ">
<h2>Edit Account</h2>
<div class="seperator-green my-3"></div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render 'shared/errors', object: resource %>

  <div class="form-group">
    <%= f.label "First Name" %>
    <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "eg. Koosie" %>
  </div>
  <div class="form-group">
    <%= f.label "Username" %>
    <%= f.text_field :username, autofocus: "off", class: "form-control", placeholder: "eg. koos123" %>
  </div>
  <div class="form-group">
    <%= f.label "Email" %>
    <%= f.email_field :email, autofocus: "off", class: "form-control", placeholder: "eg. koosie@koos.com" %>
  </div>
  <% provinces = ["Eastern Cape", "Free State", "Gauteng", "Kwazulu-Natal", "Limpopo", "Mpumalanga", "North West", "Northern Cape", "Western Cape"] %>
  <div class="form-group">
    <%= f.label "Province" %>
    <%= f.select(:province, provinces, {:include_blank => "-select-"}, 
    { :class => 'custom-select input-xl', :style => 'width: 100%', id: 'subject-input' }) %>
  </div>
  <div class="form-group">
    <%= f.label "School (optional)" %>
    <%= f.text_field :school, autocomplete: "off", class: "form-control", placeholder: "eg. Paul Roos Gymnasium" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :current_password %><p>(we need your current password to confirm your changes)</p>
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
  </div>
  
  <div class="alert alert-info">
    <h4>Change Password</h4>
    <small>Leave this blank if you don't want to change your password</small>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>
  

  <div class="form-group">
    <%= f.submit "Update", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class: "btn btn-danger btn-block", data: { confirm: "Are you sure?" }, method: :delete %></p>

</div>
</div>