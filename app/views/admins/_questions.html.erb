<div class="container mt-4">
  <div class="row">
    <% @questions.each do |question| %>
      <div class="card col-lg-4 bg-info text-white p-2 col-md">
        <div class="card-header">
          <h3><%= question.question %></h3>
        </div>
        <div class="card-body">
          <h5>Option A:</h5>
          <p><%= question.option1 %></p>
          <h5>Option B:</h5>
          <p><%= question.option2 %></p>
          <h5>Option C:</h5>
          <p><%= question.option3 %></p>
          <h5>Option D:</h5>
          <p><%= question.option4 %></p>
          
        </div>
        <%= link_to "Delete question", destroy_category_question_path(question), 
        class: "btn btn-danger btn-block", method: :post, data: { confirm: "Are you sure you want to delete this question?" } %>
      </div>
    <% end %>
  </div>
</div>