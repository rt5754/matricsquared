<%= form_for @subject, :url => { :controller => 'subjects', :action => action}, method: :post, multipart: true do |f| %>
  <div class="form-group">
    <label for="subject-name-input">Subject name</label>
    <%= f.text_field :name, class: "form-control", id: "subject-name-input", placeholder: "eg. Mathematics" %>
  </div>
  <div class="form-group">
    <label for="question-category">Subject Code</label>
    <%= f.text_field :code, class: "form-control", id: "subject-code-input", placeholder: "eg. MATH" %>  
  </div>
  <div class="form-group">
    <label for="question-category">Papers</label>
    <%= f.number_field :papers, class: "form-control", id: "subject-code-input", placeholder: "eg. 2" %>
  </div>
  <div class="form-group">
    <label class="custom-file">
      <%= f.file_field :banner, class: "custom-file-input" %>
      <span class="custom-file-control">Banner (Browse)</span>
    </label>  
  </div>
  <div class="form-group">
    <label class="custom-file">
      <%= f.file_field :avatar, class: "custom-file-input" %>
      <span class="custom-file-control">Avatar (Browse)</span>
    </label>  
  </div>
  <div class="form-group">
    <label for="theme-input">Theme</label>
    <div class="btn-group" data-toggle="buttons" style="width:100%">
      <label class="btn col-4 btn-primary">
        <%= f.radio_button :theme, "primary", id: "option4", type: "radio", autocomplete: "off" %>
      </label>
      <label class="btn col-4 btn-success">
        <%= f.radio_button :theme, "success", id: "option1", type: "radio", autocomplete: "off" %>
      </label>
      <label class="btn col-4 btn-warning">
        <%= f.radio_button :theme, "warning", id: "option2", type: "radio", autocomplete: "off" %>
      </label>
      <label class="btn col-4 btn-danger">
        <%= f.radio_button :theme, "danger", id: "option3", type: "radio", autocomplete: "off" %>
      </label>
    </div>
  </div>
  <%= f.submit "Submit", class:"btn btn-success btn-block" %>
<% end %>